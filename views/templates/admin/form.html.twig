{% import '@PrestaShop/Admin/macros.html.twig' as ps %}

{% block address_customer_type_form %}
    {{ form_start(addressCustomerTypeForm) }}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">schedule</i>
            {{ 'Address Customer Types'|trans({}, 'Modules.Electronic_invoice_fields.Electronic_invoice_fields') }}
        </h3>
        <div class="card-block row">
            <div class="card-text">
                {{ form_errors(addressCustomerTypeForm) }}

                {{ ps.form_group_row(addressCustomerTypeForm.name, {}, {
                    'label': 'Address Customer Type name'|trans({}, 'Modules.Electronic_invoice_fields.Electronic_invoice_fields'),
                    'help': 'Invalid characters: numbers and'|trans({}, 'Modules.Electronic_invoice_fields.Electronic_invoice_fields')
                    ~ ' !<>,;?=+()@#"{}_$%:'
                }) }}

                {% block address_customer_type_form_reset %}
                    {{ form_rest(addressCustomerTypeForm) }}
                {% endblock %}
            </div>
        </div>
        <div class="card-footer">
            <a href="{{ pathWithBackUrl('admin_address_customer_type') }}" class="btn btn-outline-secondary">
                {{ 'Cancel'|trans({}, 'Admin.Actions') }}
            </a>
            <button class="btn btn-primary float-right">
                {{ 'Save'|trans({}, 'Admin.Actions') }}
            </button>
        </div>
    </div>
    {{ form_end(addressCustomerTypeForm) }}
{% endblock %}
