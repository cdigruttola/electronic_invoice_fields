{% set enableSidebar = true %}
{% set layoutTitle = 'Customer Type'|trans({}, 'Modules.Electronicinvoicefields.Einvoice') %}
{% set layoutHeaderToolbarBtn = {
    'add': {
        'href': path('admin_address_customer_type_create'),
        'desc': 'Add new address customer type'|trans({}, 'Modules.Electronicinvoicefields.Einvoice'),
        'icon': 'add_circle_outline'
    }
} %}

{% extends 'PrestaShopBundle:Admin:layout.html.twig' %}

{% block content %}
    {% block address_customer_type_listing %}
        <div class="row">
            <div class="col-12">
                {% embed '@PrestaShop/Admin/Common/Grid/grid_panel.html.twig' with {'grid': addressCustomerTypeGrid} %}
                {% endembed %}
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('../modules/electronicinvoicefields/views/js/address_customer_type.bundle.js') }}"></script>
    <script src="{{ asset('themes/default/js/bundle/pagination.js') }}"></script>
{% endblock %}
